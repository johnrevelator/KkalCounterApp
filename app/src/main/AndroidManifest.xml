<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="inc.ak.kkalcounter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KkalCounter"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.ChooseProduct" />
        <activity
            android:name=".activity.DescScrollingActivity"
            android:label="@string/title_activity_desc_scrolling"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.EditProfile" />
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddProductActivity" />
        <activity
            android:name=".activity.EatingDetailsActivity"
            android:label="@string/title_activity_eating_details"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>