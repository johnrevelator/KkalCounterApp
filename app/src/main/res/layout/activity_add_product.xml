<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inc.ak.kkalcounter.activity.MainActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_below="@+id/appBar"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="inc.ak.kkalcounter.activity.AddProductActivity"
    android:orientation="vertical">
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_marginTop="8dp"

        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="Название"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_marginTop="8dp"

        android:layout_height="wrap_content"
        android:id="@+id/kcal"
        android:hint="Количество ккал"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_marginTop="8dp"

        android:layout_height="wrap_content"
        android:id="@+id/prot"
        android:hint="Количество белков"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_marginTop="8dp"

        android:layout_height="wrap_content"
        android:id="@+id/carb"
        android:hint="Количество углеводов"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_marginTop="8dp"

        android:layout_height="wrap_content"
        android:id="@+id/fat"
        android:hint="Количество жиров"/>

</LinearLayout>
</RelativeLayout>